<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <TextView
            android:id="@+id/history_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="March 12, 2023 - 11:00 AM"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="12dp"
            android:textStyle="bold"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/history_time"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="12dp"
            android:background="@color/gray_soft"/>
        <ImageView
            android:id="@+id/image"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/doctor_image"/>
        <TextView
            android:id="@+id/doctor_name"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr.Sarah Johnson"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toEndOf="@id/image"/>
        <TextView
            android:id="@+id/specialist"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gynecologist"
            android:textColor="@color/gary"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/doctor_name"
            app:layout_constraintStart_toEndOf="@id/image"/>
        <TextView
            android:id="@+id/location"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Women Health Clinic"
            android:textColor="@color/gary"
            app:layout_constraintTop_toBottomOf="@id/specialist"
            app:layout_constraintStart_toEndOf="@id/icon_image"/>
        <ImageView
            android:id="@+id/icon_image"
            android:layout_margin="12dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/custom_location_icon"
            app:layout_constraintTop_toBottomOf="@id/specialist"
            app:layout_constraintStart_toEndOf="@id/image"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidlineV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reschedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="RESCHEDULE"
            android:layout_margin="12dp"
            android:background="@drawable/bg_submit"
            android:backgroundTint="@color/gray_soft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidlineV"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SEE DETAILS"
            android:layout_margin="12dp"
            android:background="@drawable/bg_submit"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/guidlineV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_soft"
            app:layout_constraintBottom_toTopOf="@id/btn_reschedule"
            android:layout_margin="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>